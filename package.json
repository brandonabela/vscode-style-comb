{
	"name": "vscode-style-comb",
	"displayName": "Style Comb Formatter",
	"description": "Style formatter and property grouping",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.49.0"
	},
	"publisher": "BrandonAbela",
	"author": {
		"name": "Brandon Abela"
	},
	"license": "MIT",
	"homepage": "https://github.com/brandonabela/vscode-style-comb",
	"repository": {
		"type": "git",
		"url": "https://github.com/brandonabela/vscode-style-comb"
	},
	"bugs": {
		"url": "https://github.com/brandonabela/vscode-style-comb/issues"
	},
	"icon": "assets/icon.png",
	"keywords": [
		"formatter",
		"css",
		"less",
		"sass",
		"scss",
		"styled-components",
		"combed-components",
		"style comb"
	],
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.vscode-style-comb",
				"title": "Style Comb Format"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.21",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
